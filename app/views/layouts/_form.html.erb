<%= form_tag("/", method: "get") do %>
  <%= label_tag(:q, "Enter a Subreddit (example: ruby):") %>

  <p><%= text_field_tag(:q) %></p>
  <p><%= submit_tag 'Fetch', class: 'btn btn-primary' %></p>

  <% if params[:q].blank? %>
    <% params[:q] = 'all' %>
  <% end %>

  <h5>Displaying headlines for <%=link_to "reddit.com/r/#{params[:q]}", "http://reddit.com/r/#{params[:q]}", target: "_" %></h5>
<% end %>
