<div class="container-fluid">
  <div>
    <%= render 'layouts/form' %>
  </div>

  <div class="col-xs-6">
    <h5 class="sec-heading">Subreddit: <%=link_to "#{@reddit_query}", "http://reddit.com/r/#{@reddit_query}", target: "_" %></h5>
    <ol class="headline_list">
      <% @fetch_reddit.each do |url| %>
        <li><%= link_to url[:content], url[:href], target: '_' %></li>
      <% end %>
    </ol>
  </div>

  <div class="col-xs-6">
      <h5 class="sec-heading">Tweets mentioning <%= link_to "#{params[:q]}", "https://twitter.com/search?q=#{@tweet_query}&src=typd", target: "_"%>:</h5>
    <ol class="headline_list">
      <% @tweets.each do |tweet| %>
        <li><%= tweet %></li>
      <% end %>
    </ol>
  </div>
</div>
